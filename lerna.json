{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "version": "0.1.0",
  "command": {
    "version": {
      "conventionalCommits": true,
      "changelogPreset": {
        "name": "conventional-changelog",
        "types":[
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "chore",
            "hidden": false
          },
          {
            "type": "docs",
            "hidden": false
          },
          {
            "type": "style",
            "hidden": false
          },
          {
            "type": "refactor",
            "hidden": false
          },
          {
            "type": "perf",
            "hidden": true
          },
          {
            "type": "test",
            "hidden": true
          },
          {
            "type": "add",
            "hidden": false
          }

        ]
      }
    }
  }

}
